<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2_1"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/numero5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TIPS









        TO BUILD A LANGUAGE LEARNING HABIT"
        android:textAlignment="center"
        android:textColor="#BA000000"
        android:textSize="50dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:paddingRight="240dp"
            android:text="+ free


New Habit

















Tracker!"
            android:textAlignment="center"
            android:textColor="#BA000000"
            android:textSize="23dp"
            android:typeface="sans" />

        <ImageView
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/titulo"
            android:layout_gravity="right"
            android:layout_marginTop="45dp"
            android:paddingRight="30dp"
            android:src="@drawable/abajo_2" />

    </RelativeLayout>

</LinearLayout>